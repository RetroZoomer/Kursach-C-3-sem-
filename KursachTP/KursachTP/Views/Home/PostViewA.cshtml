@using KursachTP.Models
<h2>Все посты</h2>
<style>
    body {
        font: 'Roboto', sans-serif;
        font-size: 16px;
        background: #7CA8FF;
        width: 70%;
        margin: 0 auto;
    }

    .header {
        position: absolute;
        width: 100%;
        height: 10%;
        left: 0px;
        top: 0px;
        min-width: 20%;
        background: #6296E4;
        box-shadow: 0px 10px 10px rgba(0, 0, 0, 0.25);
    }

    .nav {
        display: flex;
        align-items: center;
        justify-content: end;
        min-width: 20%;
        min-height: 50%;
    }

    .header-intro {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-top: 1.3%;
        margin-left: 15%;
        margin-right: 15%;
        min-width: none;
    }

    .logo {
        text-decoration: none;
        color: white;
        font: 'Roboto';
        font-size: 24pt;
        min-width: 20%;
        min-height: 100%;
    }

    .nav_link_find {
        display: inline-block;
        text-decoration: none;
        color: #6296E4;
        font: 'Roboto';
        font-size: 24pt;
        background-color: #FFFFFF;
        border-radius: 51px;
        padding: 0 15px 0 15px;
    }

    .nav_link {
        display: inline-block;
        margin-left: 10%;
        text-decoration: none;
        color: white;
        font: 'Roboto';
        font-size: 24pt;
        white-space: nowrap;
        max-height: 100%;
        min-width: auto;
        min-height: 100%;
    }

    .main {
        align-items: center;
        margin: 13% auto 0 auto;
        min-width: 50%;
        display: flex;
        justify-content: flex-start;
        align-items: flex-start;
    }

    .right {
        margin: 0% 0% 3% auto;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
    }

    .createPost {
        font-size: 24px;
    }

    .post {
        text-align: center;
        margin: 0% auto 5% auto;
        width: 700px;
        background: #6296E4;
        box-shadow: 0px 12px 15px rgba(0, 0, 0, 0.25);
        border-radius: 20px;
    }

    .findFriends {
        text-align: center;
        border-radius: 51px;
        border: 2px solid white;
        background: white;
        color: #6296E4;
        font-size: 24px;
        font-family: Arial, Helvetica, sans-serif;
        width: 250px;
        box-shadow: 0px 12px 15px rgba(0, 0, 0, 0.25);
        border-radius: 20px;
    }

    .title {
        text-align: center;
        color: #FFFFFF;
        font-size: 26px;
        padding: 3% 5% 3% 5%;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .titleNiz {
        text-align: center;
        color: #FFFFFF;
        font-size: 22px;
        padding: 3% 0% 0% 5%;
        display: flex;
        justify-content: space-between;
        align-items: baseline;
    }

    .dateTime {
        padding-left: 1%;
        font-size: 16px;
        color: #d6d6d6;
    }

    .titleD {
        text-align: left;
        color: #FFFFFF;
        font-size: 21px;
        padding: 1% 5% 2% 5%;
    }

    .hobby {
        text-align: left;
        color: #FFFFFF;
        font-size: 21px;
        padding: 1% 5% 2% 5%;
    }

    .description {
        width: 90%;
        height: 50%;
        margin: 0 auto;
        padding: 1%;
        text-align: left;
        background: #AAC4FF;
        border-radius: 10px;
    }

    .textDescription {
        text-align: left;
        color: #FFFFFF;
        font-size: 18px;
        padding: 1% 5% 2% 5%;
    }

    .button {
        float: right;
        margin: 3% 5% 3% 0%;
        border-radius: 51px;
        border: 2px solid white;
        background: white;
        color: #6296E4;
        font-size: 24px;
        width: 200px;
    }

    .buttonRight {
        margin: 0% auto 30px auto;
        border-radius: 51px;
        border: 2px solid white;
        background: white;
        color: #6296E4;
        font-size: 24px;
        width: 250px;
        box-shadow: 0px 12px 15px rgba(0, 0, 0, 0.25);
        border-radius: 20px;
    }

    .commentSection {
        padding-bottom: 3%;
    }

    .comment {
        width: 90%;
        margin: 2% auto;
        padding: 1% 1% 1% 1%;
        text-align: left;
        background: #AAC4FF;
        border-radius: 10px;
        display: flex;
        justify-content: flex-start;
        align-items: center;
    }

    .textComment {
        color: #FFFFFF;
        font-size: 18px;
        padding: 1% 2% 1% 2%;
        width: 362px;
    }

    .timeComment {
        float: right;
        color: #FFFFFF;
        font-size: 18px;
        padding: 1% 2% 1% 0%;
    }

    .userComment {
        text-align: left;
        color: #FFFFFF;
        font-size: 18px;
        padding: 1% 0% 1% 2%;
    }

    .contentF {
        justify-content: space-between;
        max-width: 100%;
        margin-right: 0;
        margin-left: 0;
    }

    footer {
        display: flex;
        justify-content: space-between;
        color: #FFFFFF;
        width: 100%;
        margin-top: 2%;
        margin-bottom: 5%;
    }

    .aboutF {
        float: right;
    }

    .footerA {
        text-decoration: none;
        color: #FFFFFF;
    }
</style>


<header class="header">
    <div class="header-intro">
        <div class="logo">Logo</div>
        <nav class="nav">
            <a class="nav_link" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
            <a class="nav_link" asp-area="" asp-controller="Home" asp-action="LogInView">Вход</a>
            <a class="nav_link" asp-area="" asp-controller="Home" asp-action="PostView">Посты</a>
            <a class="nav_link" href="#">О нас</a>
        </nav>
    </div>
</header>



<div class="tb1">
    <table class="table table-striped">
        <tr>
            <td>ID</td>
            <td>ID_User(Имя)</td>
            <td>Название</td>
            <td>Содержание</td>
            <td>Время выхода поста</td>
            <td>Видимость</td>
        </tr>
        @foreach (var pst in Model)
        {
            <tr>
                <td>@pst.PostID</td>
                <td>@pst.UserID</td>
                <td>@pst.PostTitle</td>
                <td>@pst.PostDescription</td>
                <td>@pst.StartTime</td>
                <td>
                    @if (@pst.Hide == true)
                    {<p>Виден</p>}
                    else
                    {<p>Не виден</p>}
                </td>
                <td>
                <td>
                    <a class="btn btn-warning" asp-action="DeletePost" asp-route-id="@pst.PostID">Удалить</a>
                    <a class="btn btn-primary" asp-action="EditPost" asp-route-id="@pst.PostID">Редактировать</a>
                    <a class="btn btn-info" asp-action="InfoPost" asp-route-id="@pst.PostID">i</a>
            </tr>
        }
    </table>
</div>
<a class="btn btn-warning" asp-action="CreatePost">Добавить новый пост</a>


@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}