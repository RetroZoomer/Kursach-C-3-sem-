@using KursachTP.Models
@using System.Security.Claims
@model List<User>
<style>
    body {
        font-family: 'Roboto', sans-serif;
        font-size: 16px;
        background: #7CA8FF;
        width: 70%;
        margin: 0 auto;
    }

    .header {
        position: absolute;
        width: 100%;
        height: 10%;
        left: 0px;
        top: 0px;
        min-width: 20%;
        background: #6296E4;
        box-shadow: 0px 10px 10px rgba(0, 0, 0, 0.25);
    }

    .nav {
        display: flex;
        align-items: center;
        justify-content: end;
        min-width: 20%;
        min-height: 50%;
    }

    .header-intro {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-top: 1.3%;
        margin-left: 15%;
        margin-right: 15%;
        min-width: none;
    }

    .logo {
        text-decoration: none;
        color: white;
        font: 'Roboto';
        font-size: 24pt;
        min-width: 20%;
        min-height: 100%;
    }

    .nav_link {
        display: inline-block;
        margin-left: 10%;
        text-decoration: none;
        color: white;
        font: 'Roboto';
        font-size: 24pt;
        white-space: nowrap;
        max-height: 100%;
        min-width: auto;
        min-height: 100%;
    }

    .main {
        align-items: center;
        margin: 13% auto 0 auto;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

    .content {
        text-align: center;
        padding-top: 2%;
        padding-bottom: 2%;
        margin: 0 auto;
        width: 100%;
        font-family: 'Roboto', sans-serif;
        color: white;
    }

    .title {
        color: #FFFFFF;
        font-size: 26px;
    }

    .mainInf {
        color: #FFFFFF;
        font-size: 21px;
        display: flex;
        flex-direction: column;
        flex-flow: column wrap;
        align-items: stretch;
        justify-content: flex-start;
        padding: 2% 4% 0% 4%;
    }

    .Text {
        text-align: left;
        font: 'Roboto', sans-serif;
    }

    .input {
        background: #5389DA;
        border-radius: 51px;
        border: 2px solid #4876bb;
        color: white;
        width: 96%;
        height: 30px;
        padding: 0% 2% 0 2%;
    }

    .inputDate {
        background: #5389DA;
        border-radius: 51px;
        border: 2px solid #4876bb;
        color: white;
        padding-left: 2%;
        padding-right: 2%;
        width: 110px;
        height: 30px;
    }

    /* Должно масштабироваться в зависимости сколько хобби */
    .inputMed {
        background: #5389DA;
        border-radius: 51px;
        border: 2px solid #4876bb;
        color: white;
        width: 100%;
        height: 30px;
    }

    .inputBig {
        background: #5389DA;
        border-radius: 18px;
        border: 2px solid #4876bb;
        color: white;
        padding: 5%;
        resize: none;
        width: 90%;
        min-height: 50px;
    }

    .button {
        margin: 5% auto 5% auto;
        width: 150px;
        display: flex;
        border-radius: 51px;
        border: 2px solid white;
        background: white;
        color: #6296E4;
        font-size: 18px;
        text-decoration: none;
        text-align: center;
        flex-direction: column;
        flex-wrap: nowrap;
        align-items: center;
        justify-content: center;
    }


    .contentF {
        justify-content: space-between;
        max-width: 100%;
        margin-right: 0;
        margin-left: 0;
    }

    footer {
        display: flex;
        justify-content: space-between;
        color: #FFFFFF;
        width: 100%;
        margin-top: 2%;
        margin-bottom: 5%;
    }

    .aboutF {
        float: right;
    }

    .footerA {
        text-decoration: none;
        color: #FFFFFF;
    }

    .titleOtAndDo {
        text-align: center;
        color: white;
        font-size: 24px;
        margin-bottom: 10px;
    }

    .contentOtAndDo {
        text-align: center;
        padding-top: 2%;
        padding-bottom: 2%;
        margin-top: 3%;
        margin-bottom: 3%;
        width: 330px;
        height: 160px;
        display: flex;
        flex-flow: column wrap;
        justify-content: center;
        background: #6296E4;
        box-shadow: 0px 12px 15px rgba(0, 0, 0, 0.25);
        border-radius: 20px;
    }

    .inputOtAndDo {
        background: #5389DA;
        border-radius: 51px;
        border: 2px solid #4876bb;
        color: white;
        width: 80px;
        height: 30px;
        align-items: stretch;
        padding: 0% 2% 0 2%;
    }

    .buttonOtAndDo {
        width: 200px;
        margin: 0 auto;
        border-radius: 51px;
        border: 2px solid white;
        background: white;
        color: #6296E4;
        font-size: 24px;
    }

    .titleID {
        text-align: center;
        color: white;
        font-size: 24px;
        margin-bottom: 10px;
    }

    .contentID {
        text-align: center;
        padding-top: 2%;
        padding-bottom: 2%;
        width: 380px;
        height: 160px;
        display: flex;
        flex-flow: column wrap;
        align-items: center;
        justify-content: center;
        background: #6296E4;
        box-shadow: 0px 12px 15px rgba(0, 0, 0, 0.25);
        border-radius: 20px;
    }

    .inputID {
        background: #5389DA;
        border-radius: 51px;
        border: 2px solid #4876bb;
        color: white;
        width: 290px;
        height: 30px;
        margin-bottom: 20px;
        padding: 0% 2% 0 2%;
    }

    .buttonID {
        width: 200px;
        margin: 0 auto;
        border-radius: 51px;
        border: 2px solid white;
        background: white;
        color: #6296E4;
        font-size: 24px;
    }

    .contentTb {
        padding: 2%;
        margin: 2% auto 5%;
        width: 100%;
        border: 5px;
        border-color: black;
        color: white;
        background: #6296E4;
        box-shadow: 0px 12px 15px rgba(0, 0, 0, 0.25);
        border-radius: 10px;
    }

    table {
        margin: 0 auto;
        width: 1225px;
        border-collapse: collapse;
    }
    TD, TH {
        padding: 3px;
        max-width: 220px;
        overflow-wrap: break-word;
        border: 1px solid #00000029;
    }

    tr:nth-child(odd) {
        background-color: #5a91fb; 
    }

    tr:nth-child(even) {
        background-color: #71a0ff; 
    }

</style>

<header class="header">
    <div class="header-intro">
        <div class="logo">Logo</div>
        <nav class="nav">
            <a class="nav_link" asp-area="" asp-controller="Home" asp-action="Index">Пользователи</a>
            <a class="nav_link" asp-area="" asp-controller="Home" asp-action="WarningView">Жалобы</a>
            <a class="nav_link" asp-area="" asp-controller="Home" asp-action="PostView">Посты</a>
            <a class="nav_link" asp-area="" asp-controller="Home" asp-action="ProfileView">
                @try
                {
                    @User.FindFirst(x => x.Type == ClaimTypes.Name).Value
                }
                catch (NullReferenceException ex)
                {

                }
            </a>
            <a class="nav_link" asp-area="" asp-controller="Home" asp-action="Logout">Выход</a>
        </nav>
    </div>
</header>

<div class="main">
    <div style="display: flex; flex-direction: row; justify-content: space-around; align-items: center; width: 100%;">
        <form method="post" asp-action="IndexID" style="margin-right: 50px">
            <div class="contentOtAndDo">
                <div class="titleOtAndDo">Показать пользователей от:</div>
                <div style="height: 50px;">
                    <input name="usersid" type="number" class="inputOtAndDo" />
                    <input name="usersid2" type="number" class="inputOtAndDo" />
                </div>
                <input type="submit" id="btnA" class="buttonOtAndDo" value="Найти" />
            </div>
        </form>

        <form method="post" asp-action="IndexName">
            <div class="contentID">
                <div class="titleID">Введите данные пользователя (фрагмент имени или логина):</div>
                <input name="namesuser" type="text" class="inputID" />
                <input type="submit" id="btnB" class="buttonID" value="Найти" />
            </div>
        </form>
    </div>

    <div class="content">
        <h2>Все пользователи</h2>
        <table>
            <tr>
                <td>ID</td>
                <td>Имя</td>
                <td>Фамилия</td>
                <td>Описание</td>
                <td>Ссылка на мессенджер</td>
                <td>Дата рождения</td>
                <td>Пол</td>
                <td>Логин</td>
                <td class="td">Пароль</td>
                <td>Телефон</td>
                <td>Роль</td>
                <td>Действия</td>
            </tr>
            @foreach (var usr in Model)
            {
                <tr>
                    <td>@usr.UserID</td>
                    <td>@usr.Name</td>
                    <td>@usr.LastName</td>
                    <td>@usr.UserDescription</td>
                    <td>@usr.LinkMes</td>
                    <td>@usr.Birthday</td>
                    <td>
                        @if (@usr.Pol == true)
                        {<p>Мужской</p>}
                        else
                        {<p>Женский</p>}
                    </td>
                    <td>@usr.Login</td>
                    <td>@usr.Password</td>
                    <td>@usr.Phone</td>
                    <td>@usr.Rol</td>
                    <td>
                        <a class="button" asp-action="InfoPerson" asp-route-id="@usr.UserID">Информация</a>
                        <a class="button" asp-action="EditPerson" asp-route-id="@usr.UserID">Редактировать</a>
                        <a class="button" asp-action="DeletePerson" asp-route-id="@usr.UserID">Удалить</a>
                </tr>
            }
        </table>
    </div>
</div>


<hr style="margin-top: 15%;">


@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
